#: import RippleButton libsk.uix.ripple.RippleButton
<MenuItemTextUnderIcon>:        
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    BoxLayout:
        # canvas:
        #     Color:
        #         rgba: [1, .5, 0, 1]
        
        #     RoundedRectangle:
        #         size: self.size[0]-dp(5), self.size[1]-dp(5)
        #         pos: self.pos[0]+dp(2.5),self.pos[1]+dp(2.5)
        #         radius: [dp(5), dp(5),dp(5),dp(5)]
        
        size_hint:None,None
        size:min(self.parent.size),min(self.parent.size)
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        orientation: 'vertical'
        FloatLayout:
            Label:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint:None,None
                size:min(self.parent.size),min(self.parent.size)
                canvas:
                    Color:
                        rgba:1,1,1,1
                
                    RoundedRectangle:
                        size: self.size[0], self.size[1]
                        pos: self.pos
                        radius: [dp(10), dp(10),dp(10), dp(10)]
                        source:root.data["icon"]
        Label:
            text: root.data["name"]
            color:
            size_hint:1,None
            height:dp(25)
            font_size: dp(14)
    RippleButton:
        size_hint:None,None
        size:min(self.parent.size),min(self.parent.size)
        on_press:root.dispatch("on_press")
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        

<GridMenu>:
    cols:3
    size_hint: 1, None
    height:self.minimum_height
    row_default_height:min(self.width/self.cols,dp(200))
    # col_default_width: min(self.width/self.cols,dp(200))
    
    
    