<TopNav>:
    size_hint: 1, None
    height:dp(40)
    canvas:
        Color:
            rgba:root.background_color
        Rectangle:
            pos:self.pos
            size:self.size
            source:root.source        

<TopNavButton>:
    alpa:[1]
    main_color:[1,1,1]
    color: self.main_color+self.alpa
    font_name: root.icon_name
    text: root.icon
    size_hint:None,1
    width: self.height
    font_size:self.height*.75
    on_press: self.alpa=[.5]
    on_release: self.alpa=[1]
    
<TopNavAppName>:
    font_size:self.height*.5
    bold:True
    halign:"left"
    valign:"middle"
    text_size:self.size
    text:"App Name"
<TopNavIcon>:
    font_name: root.icon_name
    text: root.icon
    size_hint:None,1
    width: self.height
    font_size:self.height*.75