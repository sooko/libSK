<LibskEllipse>:
    canvas.before:
        PushMatrix:
        Rotate: 
            origin:self.center
            angle:root.rotate_angle
        Color:
            rgba:root.color 
        Ellipse:
            pos:self.pos
            size:self.size
            angle_start:root.angle_start
            angle_end:root.angle_end
            source:root.source
    canvas.after:
        PopMatrix:


<LibskSquare>:
    pos_hint:{"center_x":.5,"center_y":.5}
    Widget:
        pos_hint:{"center_x":.5,"center_y":.5}
        size_hint:None,None
        size:root.scale*min(self.parent.size),root.scale*min(self.parent.size)
        canvas:
            Color:
                rgba:root.color
            Rectangle:
                size:self.size
                pos:self.pos
                source:root.source